@model LibApp.Models.Book

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<h2>@Model.Name</h2>
<ul>
    <li>Book Name: @Model.Name</li>
    <li>Author: @Model.AuthorName</li>
    <li>Genre: @Model.Genre.Name</li>
    <li>Date Added: @Model.DateAdded.ToShortDateString()</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Number In Stock: @Model.NumberInStock</li>

</ul>
@if (User.IsInRole("StoreManager") || User.IsInRole("Owner"))
{
    <a class='btn btn-primary' href="../../books/edit/@(Model.Id)">Edit</a>
}